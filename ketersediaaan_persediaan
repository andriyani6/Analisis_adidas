import pandas as pd
import matplotlib.pyplot as plt

# Membaca data persediaan dari file CSV
adidas_data = pd.read_csv('adidas_data.csv', parse_dates=['Month'])

# Plot ketersediaan persediaan dari waktu ke waktu
plt.figure(figsize=(10, 6))
plt.plot(adidas_data['Month'], adidas_data['Inventory'], marker='o', color='green')
plt.title('Inventory Trend of Adidas Shoes')
plt.xlabel('Month')
plt.ylabel('Inventory')
plt.grid(True)
plt.show()

# Menghitung rata-rata persediaan
average_inventory = adidas_data['Inventory'].mean()
print("Rata-rata persediaan sepatu Adidas:", average_inventory)

# Menghitung persentil persediaan
percentiles = [25, 50, 75]
inventory_percentiles = np.percentile(adidas_data['Inventory'], percentiles)
for i, percentile in enumerate(percentiles):
    print(f"{percentile}th percentile inventory: {inventory_percentiles[i]}")
